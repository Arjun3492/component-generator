datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  projects  Project[]

  @@map("user")
}

model Project {
  id         Int         @id @default(autoincrement())
  name       String      @default("Default Project")
  userId     Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  user       User        @relation(fields: [userId], references: [id])
  colors     Color[]
  radii      Radius[]
  spacings   Spacing[]
  components Component[]

  @@unique([userId, name])
  @@map("project")
}

model Color {
  id        Int     @id @default(autoincrement())
  label     String
  value     String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])

  @@map("color")
}

model Radius {
  id        Int     @id @default(autoincrement())
  label     String
  value     String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])

  @@map("radius")
}

model Spacing {
  id        Int     @id @default(autoincrement())
  label     String
  value     String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])

  @@map("spacing")
}

model Component {
  id        Int             @id @default(autoincrement())
  type      String
  variant   String
  projectId Int
  project   Project         @relation(fields: [projectId], references: [id])
  styles    ComponentStyle?

  @@unique([projectId, type, variant])
  @@map("component")
}

model ComponentStyle {
  id              Int       @id @default(autoincrement())
  componentId     Int       @unique
  backgroundColor String
  textColor       String
  borderColor     String
  borderRadius    String
  paddingX        String
  paddingY        String
  component       Component @relation(fields: [componentId], references: [id])

  @@map("component_style")
}
